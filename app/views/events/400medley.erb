<div class="content l-content">
	<h1 class="content__header">400 Individual Medley</h1>
	<form class="entryform" method="post" action="/event/times">

	<input type="hidden" name="event" value="400 Individual Medley">

		<ol class="competitors__list">
			
			<% i = 0
			while i < @peoplein400IM.length %>


			<li class="competitors__listitem competitors__listitem--odd">
				<p class="competitors__name"><%= @peoplein400IM[i]  %></p><p class="competitors__name"><%= @colleges400IM[i] %></p>
				<div class="competitors__time">
					<input class="competitors__textfield" type="text" name="<%= @iDs400IM[i]%>" placeholder="time"> 
					<p>sec.</p>
				</div>
			</li>

			<% i+=1
			end %>

		</ol>
		<input class="entryform__submit l-right" type="submit" name="Submit">
	</form>
</div>